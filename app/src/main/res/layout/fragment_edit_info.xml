<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.EditInfoFragment">

    <TextView
        android:id="@+id/title_editprof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/username_editprof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_editprof"
        android:inputType="textPersonName"
        android:paddingVertical="15dp"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        android:elevation="0dp"
        android:background="@drawable/custom_button" />

    <EditText
        android:id="@+id/fname_editprof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_editprof"
        android:inputType="textPersonName"
        android:paddingVertical="15dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="12dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="30dp"
        android:elevation="0dp"
        android:background="@drawable/custom_button" />

    <EditText
        android:id="@+id/lname_editprof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fname_editprof"
        android:inputType="textPersonName"
        android:paddingVertical="15dp"
        android:paddingHorizontal="12dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:elevation="0dp"
        android:background="@drawable/custom_button" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/first_row_editprof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/lname_editprof"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/DOB_editprof"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Date of Birth"
            android:inputType="date"
            android:paddingVertical="15dp"
            android:paddingHorizontal="12dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:elevation="0dp"
            android:background="@drawable/custom_button" />

        <Spinner
            android:id="@+id/gender_editprof"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Gender"
            android:inputType="date"
            android:paddingVertical="15dp"
            android:paddingHorizontal="12dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:elevation="0dp"
            android:background="@drawable/custom_button" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/first_row_editprof"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/weight_editprof"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0 lbs"
            android:textAllCaps="false"
            android:paddingVertical="15dp"
            android:paddingHorizontal="12dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:elevation="0dp"
            android:background="@drawable/custom_button"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/height_editprof"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0'0''"
            android:paddingVertical="15dp"
            android:paddingHorizontal="12dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:elevation="0dp"
            android:background="@drawable/custom_button"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_editprof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textAllCaps="false"
        android:paddingVertical="15dp"
        android:paddingHorizontal="12dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:elevation="0dp"
        android:background="@drawable/button_blue"
        app:layout_constraintTop_toBottomOf="@id/first_row_editprof"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>