<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/date_body_measure_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{Date}"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"/>

    <EditText
        android:id="@+id/value_body_measure_dialog"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button"
        android:gravity="left|center_vertical"
        android:hint="Enter your weight"
        android:inputType="numberDecimal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/unit_body_measure_dialog"
        app:layout_constraintTop_toBottomOf="@id/date_body_measure_dialog"
        />

    <TextView
        android:id="@+id/unit_body_measure_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{units}"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_body_measure_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintVertical_bias="0.8"/>







</androidx.constraintlayout.widget.ConstraintLayout>