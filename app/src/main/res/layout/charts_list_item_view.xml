<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/cardView_charts_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    android:background="@color/white">
<!--    TODO: Implement this if we implement a fragment to show multiple data sets for any dataType (exercise can include all datasets at once)-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title_charts_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Entries"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"/>


        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart_charts_item"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
    </LinearLayout>


</androidx.cardview.widget.CardView>